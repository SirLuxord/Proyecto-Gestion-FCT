            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <ComboBox fx:id="fieldComboBox" prefWidth="150.0" GridPane.columnIndex="1" />
                <Label text="Campo a buscar: " />
            </children>
        </GridPane>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <center>
      <SplitPane fx:id="splitEmpresa" BorderPane.alignment="CENTER">
         <items>
              <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                      <TableView fx:id="empresasTable" VBox.vgrow="ALWAYS">
                          <columns>
                              <TableColumn fx:id="nifColumn" prefWidth="75.0" text="NIF" />
                              <TableColumn fx:id="nombreEmpresaColumn" prefWidth="75.0" text="Nombre" />
                              <TableColumn fx:id="direccionEmpresaColumn" prefWidth="75.0" text="Direccion" />
                              <TableColumn fx:id="localidadEmpresaColumn" prefWidth="75.0" text="Localidad" />
                              <TableColumn fx:id="cpEmpresaColumn" prefWidth="75.0" text="CP" />
                              <TableColumn fx:id="publicaColumn" prefWidth="75.0" text="Publica" />
                          </columns>
                          <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                          </columnResizePolicy>
                      </TableView>
                  </children>
              </VBox>
         </items>
      </SplitPane>
    </center>
   <bottom>
          <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
              <children>
                  <Button mnemonicParsing="false" onAction="#onAddEmpresaAction" text="Crear" />
                  <Button mnemonicParsing="false" onAction="#onSearchEmpresaAction" text="Buscar" />
                  <Button mnemonicParsing="false" onAction="#onSearchAllEmpresaAction" text="Ver todos" />
                  <Button mnemonicParsing="false" onAction="#onModifyEmpresaAction" text="Modificar " />
                  <Button mnemonicParsing="false" onAction="#onDeleteEmpresaAction" text="Eliminar" />
              </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
          </HBox>
   </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ComboBox fx:id="docenteComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Docente: " GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
            <Label text="Cial: " GridPane.halignment="RIGHT" />
            <Label text="Nuss: " GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
            <Label text="Ciclo: " GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <Label text="Apellido: " GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <Label text="Nombre: " GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <TextField fx:id="cialTextField" prefColumnCount="10" GridPane.columnIndex="1" />
            <TextField fx:id="nombreTextField" prefColumnCount="10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="apellidoTextField" prefColumnCount="10" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="nussTextField" prefColumnCount="10" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="cicloComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Tutor Empresa: " GridPane.rowIndex="6" />
            <ComboBox fx:id="tutorComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         </children>
      </GridPane>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCancelAction" text="Cancelar" />
            <Button mnemonicParsing="false" onAction="#onConfirmAction" text="Confirmar" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>

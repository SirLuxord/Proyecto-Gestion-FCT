<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <SplitPane fx:id="splitAlumno" BorderPane.alignment="CENTER">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="alumnoTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="cialAlumnoColumn" prefWidth="75.0" text="Cial" />
                        <TableColumn fx:id="nombreAlumColumn" prefWidth="75.0" text="Nombre" />
                        <TableColumn fx:id="apellidoAlumColumn" prefWidth="75.0" text="Apellido" />
                        <TableColumn fx:id="cicloAlumColumn" prefWidth="75.0" text="Ciclo" />
                        <TableColumn fx:id="nussAlumColumn" prefWidth="75.0" text="Nuss" />
                      <TableColumn fx:id="docenteAlumColumn" prefWidth="75.0" text="Docente" />
                        <TableColumn fx:id="tutorAlumColumn" prefWidth="75.0" text="Tutor Empresa" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCreateStudentAction" text="Crear" />
            <Button mnemonicParsing="false" onAction="#onSearchStudentAction" text="Buscar" />
            <Button mnemonicParsing="false" onAction="#onSearchAllStudentAction" text="Ver todos" />
            <Button mnemonicParsing="false" onAction="#onModifiedStudentAction" text="Modificar" />
            <Button mnemonicParsing="false" onAction="#onDeleteStudentAction" text="Eliminar" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
